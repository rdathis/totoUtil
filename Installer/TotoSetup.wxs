			<Component Id="ecUtil.exe" Guid="0ff1dd95-9939-4003-87fc-4d361a2550ff">
				<File Id="ecUtil.exe" Source="..\ecUtil\bin\Debug\ecUtil.exe" KeyPath="yes"/>
